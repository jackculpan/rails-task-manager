<div class="container d-flex justify-content-center">
  <ul>
  <% @tasks.each do |task| %>
    <li> <%= task.title %></li>
    <li> <%= task.details %></li>
    <li class="checkbox"> <%= task.completed %></li>
    <li class="btn btn-primary"><%= link_to "View task", tasks_show_path(task.id) %></li>
    <li class="btn btn-primary"><%= link_to "Edit task", tasks_edit_path(task.id) %></li>
    <li class="btn btn-primary"><%= link_to "Delete task", tasks_destroy_path(task.id), data: { confirm: "Are you sure you want to delete?" } %></li>
    <br>
  <% end %>
  </ul>
  <br>
  <button class="btn btn-primary"><%= link_to "Add new task", tasks_add_path %> </button>
</div>
